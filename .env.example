# Docker Configuration
DOCKER_SOCKET_PATH=/var/run/docker.sock
DOCKER_NETWORK_PREFIX=opencode_
DOCKER_CONTAINER_PREFIX=opencode_

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://localhost:5432/opencode
DATABASE_URL_TEST=postgresql://localhost:5432/opencode_test
DATABASE_MIGRATIONS_PATH=./migrations

# Legacy SQLite (Deprecated - Using PostgreSQL now)
# DATABASE_PATH=./data/opencode.db

# MCP Server Configuration
MCP_PORT=3000
MCP_HOST=localhost
MCP_MAX_CONNECTIONS=50
MCP_REQUEST_TIMEOUT_MS=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/opencode.log
LOG_MAX_SIZE=50m
LOG_MAX_FILES=7

# Resource Limits (per container)
CONTAINER_MEMORY_MB=512
CONTAINER_CPU_SHARES=1024
CONTAINER_PIDS_LIMIT=100

# Security Configuration
ALLOW_PRIVILEGED_CONTAINERS=false
ALLOW_HOST_NETWORK=false
ALLOWED_IMAGE_REGISTRIES=docker.io,ghcr.io

# Development Configuration
NODE_ENV=development
DEBUG=false
